<?xml version="1.0"?>

<launch>
  <arg name="gui"       default="true"/>
  <arg name="rviz"      default="true"/>
  <arg name="config"    default="base" />
  <arg name="world"     default="$multi_jackal_simulation_rob/worlds/testWorld.world"/>
  <arg name="ns1"       default="jackal1"/>
  <arg name="ns2"       default="jackal2"/>



  <!-- Start Gazebo. -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="verbose" value="true" />
    <arg name="use_sim_time" value="true"/>
    <arg name="gui"          value="$(arg gui)"/>
    <arg name="world_name"   value="$multi_jackal_simulation_rob/worlds/testWorld.world"/>
    <arg name="debug" value="0" />
    <arg name="headless" value="false" />
  </include>

  <!-- Spawn the robots. -->
  <include file="$(find multi_jackal_base)/launch/base_jackal.launch">
    <arg name="ns"            value="$(arg ns2)"/>
    <arg name="config"        default="$(arg config)" />
    <arg name="x"             value="1"/>
    <arg name="y"             value="1"/>
  </include>

  <!-- View in RVIZ. -->
  <!--<group if="$(arg rviz)">
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find multi_jackal_base)/rviz/two_jackals.rviz" >
    </node>
  </group> -->

</launch>